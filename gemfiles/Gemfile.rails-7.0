source 'https://rubygems.org'

gemspec path: '../'

# Bundle Rails
gem 'rails', '~> 7.0.0'

gem 'sqlite3'
gem 'puma'
gem 'sass-rails'
gem 'turbolinks'
gem 'jbuilder'
gem 'sprockets-rails'

group :development do
  gem 'web-console'
  gem 'listen'
  gem 'spring'
  gem 'spring-watcher-listen', git: 'https://github.com/rails/spring-watcher-listen.git'
end

group :test do
  # gem 'coveralls', require: false
  gem 'coveralls_reborn', require: false
end