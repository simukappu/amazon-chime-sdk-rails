source 'https://rubygems.org'

gemspec path: '../'

# Bundle Rails
gem 'rails', '~> 7.0.0'

gem 'sqlite3', "~> 1.4"
gem 'puma'
gem 'sass-rails'
gem 'turbolinks'
gem 'jbuilder'

group :development do
  gem 'web-console'
  gem 'listen'
  gem 'spring'
  gem 'spring-watcher-listen'
end

group :test do
  # gem 'coveralls', require: false
  gem 'coveralls_reborn', require: false
end